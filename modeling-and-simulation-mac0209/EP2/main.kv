<Gerenciador>:
    Menu:
        name: 'menu'
    PhysicsScreen:
        name: 'physicsScreen'
    MenuPlota:
        name: 'menuPlota'
    MUScreen:
        name: 'mu'
    MUVScreen:
        name: 'muv'
    QuedaLivreScreen:
        name: 'quedaLivre'
    
<Menu>:
    BoxLayout:
        orientation:'vertical'
        padding:200
        spacing:50
        Button:
            text:'Acelerometro'
            background_color: 0, 0, 1, 1
            on_release:app.root.current = 'physicsScreen'
        Button:
            text: 'Plotar'
            background_color: 0, 0, 1, 1
            on_release:app.root.current = 'menuPlota'
        Button:
            text:'Sair'
            background_color: 1, 0, 0, 1
            on_release:app.stop()

<MenuPlota>:
    id: MenuPlota
    BoxLayout:
        ActionBar:
            pos_hint: {'top':1}
            ActionView:
                ActionPrevious:
                    title:'Plotagem'
                    on_release:app.root.current = 'menu'
                ActionButton:
                    text:'Sair'
                    on_release:app.stop()   
    BoxLayout:
        orientation:'vertical'
        spacing:100
        padding:130
        Button:
            text: 'Movimento retilíneo uniforme'
            background_color: 0, 1, 0, 1
            on_release:app.root.current = 'mu'
        Button:
            text: 'Movimento retilíneo uniformemente variado'
            background_color: 0, 1, 0, 1
            on_release:app.root.current = 'muv'
        Button:
            text: 'Queda livre'
            background_color: 0, 1, 0, 1
            on_release:app.root.current = 'quedaLivre'

<MU>:
    id: MU
    orientation: 'vertical'
    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            ActionPrevious:
                title:'Movimento retilíneo uniforme'
                on_release:app.root.current = 'menuPlota'
            ActionButton:
                text:'Sair'
                on_release:app.stop()  
    BoxLayout:
        id: graph
        orientation: 'vertical'
        size_hint_x: 1
        size_hint_y: 1
    BoxLayout:
        size: root.width, root.height
        size_hint_x: 1
        size_hint_y: .1
        #background_color: 0, 1, 0, 1
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            TextInput:
                id: tempoMU
            Button:
                text: 'Tempo total (s)'
                font_size: 30
                background_color: 0, 1, 0, 1
                on_release: root.addTempoMU()
        BoxLayout:
            orientation: 'vertical'
            TextInput:
                id: passosMU
            Button:
                text: 'Quant. de passos'
                font_size: 30
                background_color: 0, 1, 0, 1
                on_release: root.addPassosMU()
        BoxLayout:
            orientation: 'vertical'
            TextInput:
                id: tamPassosMU
            Button:
                text: 'Tam. dos passos (m)'
                font_size: 30
                background_color: 0, 1, 0, 1
                on_release: root.addTamPassosMU()
        BoxLayout:
            Button:
                text: 'Gerar gráfico'
                font_size: 30
                background_color: 0, 1, 0, 1
                on_release: root.gerarGraficoMU()

