<QuedaLivre>:
    id: QuedaLivre
    orientation: 'vertical'
    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            ActionPrevious:
                title:'Queda Livre'
                on_release:app.root.current = 'menuPlota'
            ActionButton:
                text:'Sair'
                on_release:app.stop()  
    BoxLayout:
        id: graph
        orientation: 'vertical'
        #size: root.width/2, root.height/2
        #size_hint: 0.7, 1
        #spacing: 5
    BoxLayout:
        size: root.width, root.height
        size_hint_x: 1
        size_hint_y: .1
