<Physics>:
    id: physics
    orientation:'vertical'
    ActionBar:
        ActionView:
            ActionPrevious:
                title:'Acelerometro'
                on_release:app.root.current = 'menu'
            ActionButton:
                text:'Sair'
                on_release:app.stop()
    BoxLayout:
        size: root.size
        size_hint_x: 1
        size_hint_y: 1
        BoxLayout:
            orientation: 'vertical'
            size: root.width, root.height
            #padding: 20
            spacing: 10
            BoxLayout:
                id:coords
                size_hint_y: .05
                orientation:'horizontal'
                color: 1,1,1,1

            BoxLayout:
                id: box
                size_hint_y: .85
                size_hint_x: 1
                pos_hint: {'top': 1,'right' : 1}
                color: 0,0,0,0


            BoxLayout:
                size_hint_y: .1
                pos_hint: {'top': 1}
                color: 1,1,1,1

                Button:
                    id: startGrafico
                    text: 'Start'
                    font_size: 32
                    on_release: root.start()
                    disabled: False

                Button:
                    id: stopGrafico
                    text: 'Stop'
                    font_size: 32
                    on_release: root.stop()

                Button:
                    id: clearGrafico
                    text: 'Clear'
                    font_size: 32
                    on_release: root.clear_plot()
                Button:
                    id: saveGrafico
                    text: 'Save'
                    font_size: 32
                    on_release:
                        root.stop()
                        root.save()
                        root.show_popup()

